{
  "name": "status-checker-app",
  "version": "1.0.0",
  "description": "Local Status Checker Desktop Application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd ../frontend && npm run build && cp -r build ../electron-app/frontend-build",
    "build:backend": "echo 'Backend files ready'",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "pack": "npm run build && electron-builder --dir"
  },
  "build": {
    "appId": "com.statuschecker.app",
    "productName": "Status Checker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "frontend-build/**/*",
      "backend/**/*",
      "!backend/__pycache__",
      "!backend/*.pyc",
      "!backend/*.log"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      }
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": ["x64"]
      },
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}