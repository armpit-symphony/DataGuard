{
  "name": "status-checker-app",
  "version": "1.0.0",
  "description": "Local Status Checker Desktop Application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd ../frontend && npm run build",
    "build:backend": "cd ../backend && pip freeze > requirements.txt",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.statuschecker.app",
    "productName": "Status Checker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "frontend-build/**/*",
      "backend/**/*",
      "!backend/__pycache__",
      "!backend/*.pyc"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "sqlite3": "^5.1.6"
  }
}