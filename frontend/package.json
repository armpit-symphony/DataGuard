{
  "name": "dataguard-pro-desktop",
  "version": "1.0.0",
  "description": "DataGuard Pro - Desktop Privacy Protection Application",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "author": {
    "name": "DataGuard Pro",
    "email": "support@dataguardpro.com"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.2",
    "axios": "^1.7.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "yarn build && electron-builder",
    "preelectron-pack": "yarn build",
    "dist": "yarn build && electron-builder --publish=never",
    "dist-all": "yarn build && electron-builder -mwl --publish=never"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.dataguardpro.desktop",
    "productName": "DataGuard Pro",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*",
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!**/__pycache__",
          "!**/*.pyc",
          "!**/.git",
          "!**/node_modules"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*.py",
          "**/requirements.txt"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DataGuard Pro"
    },
    "dmg": {
      "title": "DataGuard Pro ${version}",
      "background": "build/dmg-background.png"
    },
    "publish": {
      "provider": "generic",
      "url": "https://releases.dataguardpro.com/"
    }
  },
  "devDependencies": {
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "concurrently": "^9.1.2",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "wait-on": "^8.0.3"
  }
}
