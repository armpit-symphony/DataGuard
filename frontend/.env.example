# DataGuard Pro Frontend Configuration

# Backend API URL
REACT_APP_BACKEND_URL=http://localhost:8001

# WebSocket configuration (if using real-time updates)
WDS_SOCKET_PORT=443

# Environment
NODE_ENV=development

# Feature Flags
REACT_APP_ENABLE_DESKTOP_MODE=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=true

# API Configuration
REACT_APP_API_TIMEOUT=30000
REACT_APP_MAX_RETRY_ATTEMPTS=3

# UI Configuration
REACT_APP_THEME=dark
REACT_APP_ANIMATION_DURATION=300

# Application Metadata
REACT_APP_VERSION=1.0.0
REACT_APP_APP_NAME=DataGuard Pro

# External Services (Optional)
# REACT_APP_SENTRY_DSN=your-sentry-dsn
# REACT_APP_GOOGLE_ANALYTICS_ID=your-ga-id